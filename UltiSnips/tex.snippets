snippet letter "letter template" b
%!TeX ts-program = xelatex
%!TeX encoding = utf-8 Unicode
\documentclass[a4paper,11pt]{letter}
\usepackage[margin=1.25in]{geometry}
\usepackage[proportional,osf,scaled=1.064]{erewhon}
\usepackage{pdfpages}
%\date{August 12, 2016}
\address{
    ${1:Address line 1} \\ % Sender's address
	${2:Address line 2} \\ 
	${3:Address line 3}
}
\signature{
    ${4:Author} \\ 
    ${5:Email address} \\ 
    ${6:Phone number}
}
\begin{document}
\begin{letter}
{
    ${7:Recipient} \\
    ${8:Address line 1} \\
    ${9:Address line 2} \\
    ${10:Address line 3}
}
\opening{Dear Recipient,}

Blah.

\closing{Sincerely,}

\ps{\textsc{p.s.} Please find a document attached.} % Postscript
\end{letter}
%\includepdf[pages={-},scale=0.85]{document.pdf} % attachments
\end{document}
endsnippet

snippet note "note template" b
%!TeX ts-program = xelatex
%!TeX encoding = utf-8 Unicode
\documentclass[11pt,a4paper]{article}

\title{${1:Title}}
\author{${2:Author}}

\begin{document}

\maketitle

\end{document}
endsnippet

snippet toc "Table of contents, tables and figures" b
\tableofcontents

\listoffigures

\listoftables

\pagebreak
endsnippet

snippet abs "Abstract" b
\begin{abstract}

$0

\end{abstract}
endsnippet	

snippet sum "Summary block" b
\phantomsection\addcontentsline{toc}{section}{Summary}
\section*{Summary} % (fold)

$0

% section summary (end)
endsnippet

snippet beg "begin and block" b
\begin{$1}

$0

\end{$1}
endsnippet

snippet sec "section{} and label{}" b
\section{${1:SecName}} % (fold)
\label{sec:${2:${1/\\\w+\{(.*?)\}|\\(.)|(\w+)|([^\w\\]+)/(?4:_:\l$1$2$3)/g}}}

$0

% section $2 (end)
endsnippet

snippet sub "subsection{} and label" b
\subsection{${1:SubName}} % (fold)
\label{sub:${2:${1/\\\w+\{(.*?)\}|\\(.)|(\w+)|([^\w\\]+)/(?4:_:\l$1$2$3)/g}}}

$0

% subsection $2 (end)
endsnippet

snippet subs "subsubsection{} and label" b
\subsubsection{${1:SubsubName}} % (fold)
\label{ssub:${2:${1/\\\w+\{(.*?)\}|\\(.)|(\w+)|([^\w\\]+)/(?4:_:\l$1$2$3)/g}}}

$0

